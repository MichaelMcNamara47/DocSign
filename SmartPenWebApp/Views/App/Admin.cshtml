@model AdminViewModel
@*{
    ViewBag.Title = "Admin";
}*@

@*This section is added to the scripts section are in the _Layout.cshtml*@
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div id="uploadForm">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label>Upload Document:</label>
        <input name="file" type="file" />
        <input id="uploadButton" type="submit" value="Upload Document" />
        @*Validation for upload (not added to model yet)
        <span asp-validation-for=""></span>
        *@
        <br />
        <label asp-for="fName">First Name:</label>
        <input asp-for="fName" type="text" />
        <span asp-validation-for="fName"></span>
        <br />
        <label asp-for="lName">Last Name:</label>
        <input asp-for="lName" type="text" />
        <span asp-validation-for="lName"></span>
        <br />
        <label asp-for="email">Email:</label>
        <input asp-for="email" type="email" />
        <span asp-validation-for="email"></span>
        <br />
        <label asp-for="message">Message:</label>
        <textarea asp-for="message" rows="4"></textarea>
        <span asp-validation-for="message"></span>
        <br />
        <input type="submit" value="Send Document" />
    </form>
</div> 